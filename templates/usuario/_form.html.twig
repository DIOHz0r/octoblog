{{ form_start(form) }}
        {% if form.email is defined %}
            {{ form_row(form.email) }}
        {% else %}
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="{{ usuario.email }}">
                </div>
            </div>
        {% endif %}
        {{ form_row(form.nombre) }}
        {{ form_row(form.apellido) }}
{#        {{ form_row(form.roles) }}#}
        {{ form_row(form.plain_password) }}
    <button class="btn btn-secondary">{{ button_label|default('Salvar') }}</button>
{{ form_end(form) }}
